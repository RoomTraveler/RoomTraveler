<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.trip.notification.NotificationDao">

    <!-- 결과 매핑 정의 -->
    <resultMap id="notificationResultMap" type="com.ssafy.trip.notification.Notification">
        <id property="notificationId" column="notification_id" />
        <result property="userId" column="user_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="notificationType" column="notification_type" />
        <result property="referenceId" column="reference_id" />
        <result property="isRead" column="is_read" />
        <result property="createdAt" column="created_at" />
        <result property="username" column="username" />
    </resultMap>

    <!-- 새 알림 추가 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="notificationId">
        INSERT INTO notifications (user_id, title, content, notification_type, reference_id, is_read)
        VALUES (#{userId}, #{title}, #{content}, #{notificationType}, #{referenceId}, #{isRead})
    </insert>

    <!-- 알림 ID로 알림 조회 -->
    <select id="selectById" resultMap="notificationResultMap">
        SELECT n.*, u.username
        FROM notifications n
        LEFT JOIN users u ON n.user_id = u.user_id
        WHERE n.notification_id = #{notificationId}
    </select>

    <!-- 사용자 ID로 알림 목록 조회 -->
    <select id="selectByUserId" resultMap="notificationResultMap">
        SELECT n.*, u.username
        FROM notifications n
        LEFT JOIN users u ON n.user_id = u.user_id
        WHERE n.user_id = #{userId}
        ORDER BY n.created_at DESC
    </select>

    <!-- 사용자 ID로 읽지 않은 알림 목록 조회 -->
    <select id="selectUnreadByUserId" resultMap="notificationResultMap">
        SELECT n.*, u.username
        FROM notifications n
        LEFT JOIN users u ON n.user_id = u.user_id
        WHERE n.user_id = #{userId} AND n.is_read = FALSE
        ORDER BY n.created_at DESC
    </select>

    <!-- 알림 읽음 상태 업데이트 -->
    <update id="updateReadStatus">
        UPDATE notifications
        SET is_read = #{isRead}
        WHERE notification_id = #{notificationId}
    </update>

    <!-- 사용자의 모든 알림을 읽음 상태로 업데이트 -->
    <update id="markAllAsRead">
        UPDATE notifications
        SET is_read = TRUE
        WHERE user_id = #{userId}
    </update>

    <!-- 알림 삭제 -->
    <delete id="delete">
        DELETE FROM notifications
        WHERE notification_id = #{notificationId}
    </delete>

    <!-- 사용자의 모든 알림 삭제 -->
    <delete id="deleteAllByUserId">
        DELETE FROM notifications
        WHERE user_id = #{userId}
    </delete>

</mapper>